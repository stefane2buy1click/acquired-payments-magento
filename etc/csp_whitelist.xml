<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="cdn-acquired" type="host">https://cdn.acquired.com</value>
                <value id="cdn-apple" type="host">https://applepay.cdn-apple.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="cdn-acquired" type="host">https://cdn.acquired.com</value>
                <value id="cdn-apple" type="host">https://applepay.cdn-apple.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>